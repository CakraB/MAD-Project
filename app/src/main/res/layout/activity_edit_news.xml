<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".Admin.News.EditNewsActivity">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/poppinssemibold"
        android:gravity="center"
        android:text="Edit News"
        android:textColor="@color/custom_black"
        android:textSize="32sp" />

    <EditText
        android:id="@+id/edit_news_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/custom_gray"
        android:drawableStart="@drawable/ic_text"
        android:drawablePadding="12dp"
        android:fontFamily="@font/poppinsreguler"
        android:hint="News Title"
        android:inputType="text"
        android:padding="16dp"
        android:textColor="@color/custom_black" />

    <EditText
        android:id="@+id/edit_news_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/custom_gray"
        android:drawableStart="@drawable/ic_description"
        android:drawablePadding="12dp"
        android:fontFamily="@font/poppinsreguler"
        android:hint="News Description"
        android:inputType="text"
        android:padding="16dp"
        android:textColor="@color/custom_black" />


    <EditText
        android:id="@+id/edit_news_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/custom_gray"
        android:drawableStart="@drawable/ic_link"
        android:drawablePadding="12dp"
        android:fontFamily="@font/poppinsreguler"
        android:hint="Image URL"
        android:inputType="text"
        android:padding="16dp"
        android:textColor="@color/custom_black" />

    <Button
        android:id="@+id/button_update_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/custom_blue"
        android:fontFamily="@font/poppinssemibold"
        android:text="Update News"
        android:textColor="@color/custom_white" />

    <Button
        android:id="@+id/button_delete_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/custom_white"
        android:fontFamily="@font/poppinssemibold"
        android:text="Delete News"
        android:textColor="@color/custom_black" />

</LinearLayout>